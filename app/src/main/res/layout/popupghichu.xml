<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">


    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/boder_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"

            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập Nhật Thông Tin Ghi Chú"
                android:textSize="16sp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiêu đề"
                android:textSize="17sp"></TextView>

            <EditText
                android:id="@+id/editTieuDe"
                android:background="@drawable/boder_nv"
                android:layout_width="match_parent"
                android:hint="Tiêu Đề"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội Dung"
                android:layout_weight="1"
                android:textSize="17sp"></TextView>

            <EditText
              android:id="@+id/editNoiDung"
                android:background="@drawable/boder_nv"
                android:layout_width="match_parent"
                android:hint="Nội DUng"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnTThemGhiChu"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Thêm"
                android:textSize="10dp"
                app:backgroundTint="@android:color/holo_blue_bright"></Button>


            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btnHuyGhiChu"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Hủy"
                android:textSize="10dp"
                app:backgroundTint="?attr/actionMenuTextColor"></Button>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>